<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Evaluaci√≥n de intensidades</display-name>  
  
  <servlet>
    <servlet-name>SeguridadServlet</servlet-name>
    <servlet-class>evaluacion_intensidades.seguridad.SeguridadServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>SeguridadServlet</servlet-name>
    <url-pattern>/SeguridadServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FileUploadServlet</servlet-name>
    <servlet-class>evaluacion_intensidades.servlet.FileUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUploadServlet</servlet-name>
    <url-pattern>/FileUploadServlet</url-pattern>
  </servlet-mapping>
  
  	<servlet>
    	<servlet-name>EvaluacionIntensidadesServlet</servlet-name>
    	<servlet-class>evaluacion_intensidades.servlet.EvaluacionIntensidadesServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
    	<servlet-name>EvaluacionIntensidadesServlet</servlet-name>
    	<url-pattern>/EvaluacionIntensidadesServlet</url-pattern>
  	</servlet-mapping>
  
  	<servlet>
    	<servlet-name>EIServlet</servlet-name>
    	<servlet-class>evaluacion_intensidades.servlet.EIServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
    	<servlet-name>EIServlet</servlet-name>
    	<url-pattern>/eis</url-pattern>
  	</servlet-mapping>
  
    <servlet>
        <servlet-name>AdministracionServlet</servlet-name>
        <servlet-class>evaluacion_intensidades.servlet.AdministracionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministracionServlet</servlet-name>
        <url-pattern>/AdministracionServlet</url-pattern>
    </servlet-mapping>     
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>evaluacion_intensidades.rest</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  
    <welcome-file-list>    	
        <welcome-file>EvaluacionIntensidadesServlet</welcome-file> 
    </welcome-file-list>
